<style > :root
{
  --heading-font-family: "Beirut Display", serif;
  --heading-font-weight: 500;
  --heading-font-style: normal;
  --text-color: #333333;
}
@media screen and (min-width: 1140px) {
  .Container {
    padding: 0 80px;
  }
}

@media screen and (min-width: 641px) {
  .Container {
    padding: 0 50px;
  }

}



.Container {
  margin: 0 auto;
  padding: 0 24px;
}

.empty-page-header {
  text-align: center;
  margin: 30px 0;
}

{% for block in section.blocks %}
  .u-h3 {
    font-family: var(--heading-font-family);
    text-align: {{ block.settings.text_align }};
  }
  .image_margin {
    text-align: {{ block.settings.image_align }};
    object-fit: cover;
  }

{% endfor %}

@media screen and (max-width: 280px) {
  .img {
    width: 100%;
  }
}

@media screen and (max-width: 375px) {
  .img {
    width: 100%;
  }
}
@media screen and (max-width: 412px) {
  .img {
    width: 100%;
  }
}
@media screen and (max-width: 540px) {
  .img {
    width: 100%;
  }
}


.Heading {
  font-family: var(--heading-font-family);
  font-weight: var(--heading-font-weight);
  font-style: var(--heading-font-style);
  color: var(--heading-color);
  transition: color 0.2s ease-in-out;
}
.p__text {
  text-align: center;
  display: block;
  margin-block-start: 0 !important;
  margin-block-end: 0 !important;
  margin-inline-start: 0;
  margin-inline-end: 0;
  line-height: 1.5;
}

.link_text {
  color: #333333;
  font-weight: 500;
  font-size: 16px;
  line-height: 1.5;
  transition: color 0.2s ease-in-out;
}



}
</style><section class="Container">

{% for block in section.blocks %}
  {% if block.type == "custom-block" %}
    <h1 class="Heading u-h3">
      {{ block.settings.title}}
    </h1>
    <div class="image_margin responsive">
      <img src="{{ block.settings.image_p | img_url:"grande" }}" alt="" class="img" width="" height="">
      {%- comment -%}
        {{ block.settings.image_p | img_url:"grande" | img_tag: block.settings.title }}
      {%- endcomment -%}
    </div>

    <p class="p__text">
      {% if block.settings.subtext != nil %}
        {{ block.settings.subtext }}
      {% endif %}
      <br>
      {{ block.settings.after_break }} &nbsp;
      <a class="link_text" href="{{ block.settings.link }}">{{ block.settings.linkText }}</a>
    </p>
  {% endif %}

{% endfor %}</section>{% schema %}
{
  "name": "main-404",
  "blocks": [
    {
      "type": "custom-block",
      "name": "Custom Block",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "404-Page Not Found"
        },
        {
          "type": "text",
          "id": "subtext",
          "label": "Subtext",
          "default": "Oops, it looks like the page you are looking for is no longer here..."
        },
        {
          "type": "image_picker",
          "id": "image_p",
          "label": "image change"
        },
        {
          "type": "text",
          "id": "after_break",
          "label": "after break text",
          "default": "Choose one of the links below or"
        }, {
          "type": "text",
          "id": "linkText",
          "label": "link Text",
          "default": "click here to return home."
        }, {
          "type": "text",
          "id": "link",
          "label": "link",
          "default": "https://demodevelopmenttstore.myshopify.com/?ose=false"
        }, {
          "type": "select",
          "id": "text_align",
          "label": "Heading Text Align",
          "options": [
            {
              "value": "left",
              "label": "Left"
            }, {
              "value": "center",
              "label": "Center"
            }, {
              "value": "right",
              "label": "Right"
            }
          ],
          "default": "center"
        }, {
          "type": "select",
          "id": "image_align",
          "label": "Image Align",
          "options": [
            {
              "value": "left",
              "label": "Left"
            }, {
              "value": "center",
              "label": "Center"
            }, {
              "value": "right",
              "label": "Right"
            }
          ],
          "default": "center"
        }
      ]
    }
  ],
  "presets": [
    {
      "category": "content",
      "name": "main-404"
    }
  ]
}
{% endschema %}